CREATE DATABASE IF NOT EXISTS college;
DROP DATABASE IF EXISTS company;
USE college;
CREATE TABLE student(
rollno INT PRIMARY KEY,
name VARCHAR(50),
age INT NOT NULL
);
SELECT * FROM student;
